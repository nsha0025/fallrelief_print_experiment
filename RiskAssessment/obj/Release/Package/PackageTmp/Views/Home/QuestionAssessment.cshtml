                            <input type="hidden" name="AssessmentTypeID" value="@(Model.AssessmentTypeID)" />
                            <input type="hidden" name="SectionID" value="@(Model.SectionID)" />

                            for (int x = 0; x < Model.Qlist.Count; x++)
